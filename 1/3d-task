  	var h = prompt("Input h", 0);
  	var r = prompt("Input r", 0);
  	h=+h;
  	r=+r;
  	var pi=3.14;
  	var V = pi*r*r* h;
  	document.writeln("V="+V);
  	var S=2*pi* r *(r+ h);
document.writeln("S="+S);
  </script>
